# ===== PLANTILLA DE VARIABLES DE ENTORNO =====
# Copia este archivo a .env.local para desarrollo local
# o utiliza .env.production para producción

# ===== DESARROLLO LOCAL =====
# Rellena estos valores con los de tu entorno local

SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# Base de datos LOCAL
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/demo_db
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=rootpassword
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver

SPRING_JPA_HIBERNATE_DDL_AUTO=update
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_EXAMEN_BACKEND=DEBUG

